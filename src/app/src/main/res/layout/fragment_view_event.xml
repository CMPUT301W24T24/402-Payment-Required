<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="20dp"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_event_poster"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="Avatar Placeholder"
            android:scaleType="fitCenter"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars"
            tools:ignore="HardcodedText"/>

        <TextView
            android:id="@+id/view_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:text="Title"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/view_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date|Time"
            android:textColor="@color/pink"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/view_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/pink_box_background"
            android:padding="20dp"
            android:text="Description of the event"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/view_event_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/pink"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/sign_up"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/view_event_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

