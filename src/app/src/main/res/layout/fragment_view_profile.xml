<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.profile.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">


        <ImageView
            android:id="@+id/view_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="180sp"
            android:contentDescription="Avatar Placeholder"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/view_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Display user name:"
            android:textColor="#656565"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@id/view_profile_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_profile_picture" />

        <TextView
            android:id="@+id/view_profile_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@id/view_textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_textView2" />

        <TextView
            android:id="@+id/view_textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Email address:"
            android:textColor="#656565"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_profile_name" />

        <TextView
            android:id="@+id/view_profile_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Email_address"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/view_textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_textView3" />

        <TextView
            android:id="@+id/view_textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Phone number:"
            android:textColor="#656565"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@id/view_profile_phone_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_profile_email" />

        <TextView
            android:id="@+id/view_profile_phone_number"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Phone_number"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/view_textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_textView4" />

        <TextView
            android:id="@+id/view_textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Homepage Link:"
            android:textColor="#656565"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@id/view_profile_homepage_link"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_profile_phone_number" />

        <TextView
            android:id="@+id/view_profile_homepage_link"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Homepage Link"
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_textView5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>